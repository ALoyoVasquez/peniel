// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id      Int     @id @default(autoincrement())
  bio     String?
  picture String?
  user    Users   @relation(fields: [userId], references: [id])
  userId  Int     @unique
}

model Users {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  name     String
  lastName String
  email    String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  tipoUser String
  profile  Profile?
}

model Sede {
  id       Int    @id @default(autoincrement())
  name     String @unique
  pastores String
  address  String
  email    String
  imagen   String
  horarios String
}

model Evento {
  id        Int      @id @default(autoincrement())
  title     String
  dateEvent DateTime
  place     String
  status    String
}

model EventImg{
  id   Int      @id @default(autoincrement())
  imagen String
}


model Voluntariado {
  id          Int    @id @default(autoincrement())
  sede        Int
  titulo      String
  encargado   String
  locacion    String
  tiempo      String
  descripcion String
  avatar      String
  status      String
}
